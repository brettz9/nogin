{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["app/**/*.js", "bin/**/*.js", "./typings/Nogin.d.ts", "./typings/CypressCoverage.d.ts"],
  "exclude": ["node_modules"]
}
